<Window x:Class="OverParse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverParse"
        mc:Ignorable="d"
        Title="OverParse WDF Alpha" Height="270" Width="470"
        Deactivated="Window_Deactivated" Closing="Window_Closing">
    <Window.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="Height" Value="18"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>
    <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="179*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Setup">
                    <MenuItem Header="Locate damagelogs folder..." Click="MenuItem_Click"/>
                    <MenuItem IsCheckable="True" IsChecked="True" Header="Ignore healing timestamps" Click="MenuItem_Click_1"/>
                </MenuItem>
                <MenuItem Header="Encounter">
                    <MenuItem Header="End encounter" x:Name="EndEncounter" Click="EndEncounter_Click"/>
                </MenuItem>
                <MenuItem Header="Display">
                    <MenuItem IsCheckable="True" IsChecked="True" Header="Always on top" x:Name="AlwaysOnTop" Click="AlwaysOnTop_Click"/>
                    <MenuItem IsCheckable="True" IsChecked="False" Header="Show all entities" x:Name="FilterPlayers"/>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="About" x:Name="About" Click="About_Click"/>
                    <MenuItem Header="Website" x:Name="Website" Click="Website_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
        <ListView x:Name="CombatantData" HorizontalAlignment="Stretch" Margin="10,0" Grid.Row="1" VerticalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden" FontSize="10.667">
            <ListView.View>
                <GridView x:Name="CombatantView">
                    <GridViewColumn Header="Name" Width="{Binding ElementName=helper1, Path=ActualWidth}" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Damage" Width="{Binding ElementName=helper2, Path=ActualWidth}" DisplayMemberBinding="{Binding DamageReadout}"/>
                    <GridViewColumn Header="DPS" x:Name="DPSColumn" Width="{Binding ElementName=helper3, Path=ActualWidth}" DisplayMemberBinding="{Binding DPSReadout}"/>
                    <GridViewColumn Header="Max Hit" Width="{Binding ElementName=helper4, Path=ActualWidth}" DisplayMemberBinding="{Binding MaxHit}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Visibility="Hidden" Grid.Row="1" Margin="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <!--This is the hidden helper Field which is used to bind to, using the "Fill" column of the helper grid-->
            <Grid Grid.Column="0" x:Name="helper1"/>
            <Grid Grid.Column="1" x:Name="helper2"/>
            <Grid Grid.Column="2" x:Name="helper3"/>
            <Grid Grid.Column="3" x:Name="helper4"/>
        </Grid>
        <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="2" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="EncounterData" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" Margin="0,-1,0,1" VerticalAlignment="Stretch" FontSize="14.667" Content="Encounter Data" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2" FontWeight="Bold" />
        </Grid>
    </Grid>
</Window>
